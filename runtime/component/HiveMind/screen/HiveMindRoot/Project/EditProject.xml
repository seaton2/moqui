<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.3.xsd"
        default-menu-title="Project" default-menu-index="1">

    <parameter name="workEffortId"/>
    <parameter name="rootWorkEffortId"/>

    <transition name="createProjectInvoiceItems">
        <service-call name="mantle.account.InvoiceServices.create#ProjectInvoiceItems" in-map="context"/>
        <default-response url="."/>
    </transition>
    <transition name="updateProject">
        <service-call name="mantle.work.ProjectServices.update#Project" in-map="context"/>
        <default-response url="."/>
    </transition>
    <transition name="editClient"><default-response url="../../Admin/Client/EditClient"/></transition>
    <transition name="editVendor"><default-response url="../../Admin/Vendor/EditVendor"/></transition>

    <pre-actions>
        <if condition="rootWorkEffortId"><set field="workEffortId" from="rootWorkEffortId"/></if>
        <set field="rootWorkEffortId" from="workEffortId"/>
    </pre-actions>
    <actions>
        <entity-find-one entity-name="mantle.work.effort.WorkEffort" value-field="fieldValues"/>

        <entity-find entity-name="mantle.work.effort.WorkEffortParty" list="clientWepList">
            <date-filter/><econdition field-name="workEffortId"/>
            <econdition field-name="roleTypeId" operator="in" value="CustomerBillTo"/>
        </entity-find>
        <set field="clientWep" from="clientWepList?.getAt(0)"/>
        <entity-find entity-name="mantle.work.effort.WorkEffortParty" list="vendorWepList">
            <date-filter/><econdition field-name="workEffortId"/>
            <econdition field-name="roleTypeId" operator="in" value="VendorBillFrom"/>
        </entity-find>
        <set field="vendorWep" from="vendorWepList?.getAt(0)"/>

        <entity-find-one entity-name="moqui.basic.StatusItem" value-field="currentStatus">
            <field-map field-name="statusId" from="fieldValues?.statusId"/>
        </entity-find-one>
    </actions>
    <widgets>
        <container>
            <container-dialog id="ProjectInvoiceDialog" button-text="Project Invoice" width="700">
                <form-single name="ProjectInvoice" transition="createProjectInvoiceItems">
                    <field name="rootWorkEffortId"><default-field><hidden/></default-field></field>
                    <field name="workEffortId"><default-field title="Project ID"><display/></default-field></field>
                    <field name="workEffortName"><default-field title="Project Name"><display/></default-field></field>

                    <field name="thruDate"><default-field><date-time type="date-time"/></default-field></field>
                    <field name="invoiceId"><default-field title="Existing Invoice">
                        <drop-down allow-empty="true">
                            <entity-options key="${invoiceId}" text="#${invoiceId}: ${invoiceDate}">
                                <entity-find entity-name="mantle.account.invoice.Invoice">
                                    <econdition field-name="invoiceTypeEnumId" value="InvoiceSales"/>
                                    <econdition field-name="statusId" value="InvoiceInProcess"/>
                                    <econdition field-name="toPartyId" from="clientWep?.partyId" ignore-if-empty="true"/>
                                </entity-find>
                            </entity-options>
                        </drop-down>
                    </default-field></field>
                    <field name="submitButton"><default-field title="Invoice Time Entries"><submit/></default-field></field>
                </form-single>
            </container-dialog>
        </container>

        <form-single name="EditProject" transition="updateProject">
            <field name="workEffortId"><default-field title="Project ID"><display/></default-field></field>
            <field name="workEffortName"><default-field title="Project Name"><text-line/></default-field></field>
            <field name="clientPartyId" entry-name="clientWep?.partyId"><default-field title="Client">
                <drop-down allow-empty="true">
                    <entity-options key="${partyId}" text="${organizationName?:''} ${firstName?:''} ${lastName?:''}">
                        <entity-find entity-name="mantle.party.PartyDetailAndRole">
                            <econdition field-name="roleTypeId" value="CustomerBillTo"/>
                            <order-by field-name="organizationName"/>
                            <order-by field-name="firstName"/><order-by field-name="lastName"/>
                        </entity-find>
                    </entity-options>
                </drop-down>
                <link url="editClient" text="Edit Client">
                    <parameter name="partyId" from="clientWep?.partyId"/>
                </link>
            </default-field></field>
            <field name="vendorPartyId" entry-name="vendorWep?.partyId"><default-field title="Vendor">
                <drop-down allow-empty="true">
                    <entity-options key="${partyId}" text="${organizationName?:''} ${firstName?:''} ${lastName?:''}">
                        <entity-find entity-name="mantle.party.PartyDetailAndRole">
                            <econdition field-name="roleTypeId" value="VendorBillFrom"/>
                            <order-by field-name="organizationName"/>
                            <order-by field-name="firstName"/><order-by field-name="lastName"/>
                        </entity-find>
                    </entity-options>
                </drop-down>
                <link url="editVendor" text="Edit Vendor">
                    <parameter name="partyId" from="vendorWep?.partyId"/>
                </link>
            </default-field></field>
            <field name="priority"><default-field>
                <widget-template-include location="component://HiveMind/template/screen/ProjectWidgetTemplates.xml#priority"/>
            </default-field></field>
            <field name="statusId"><default-field title="Status">
                <drop-down allow-empty="false" current-description="${currentStatus?.description}">
                    <entity-options key="${toStatusId}" text="${transitionName} (${description})">
                        <entity-find entity-name="moqui.basic.StatusFlowTransitionToDetail">
                            <econdition field-name="statusId" from="fieldValues.statusId"/>
                        </entity-find>
                    </entity-options>
                </drop-down>
            </default-field></field>
            <field name="statusFlowId"><default-field title="Status Flow">
                <drop-down>
                    <entity-options key="${statusFlowId}" text="${description} [${statusFlowId}]">
                        <entity-find entity-name="moqui.basic.StatusFlow">
                            <econditions combine="or">
                                <econdition field-name="statusTypeId" value="WorkEffort"/>
                                <econdition field-name="statusTypeId" from="null"/>
                            </econditions>
                        </entity-find>
                    </entity-options>
                </drop-down>
            </default-field></field>
            <field name="estimatedCompletionDate">
                <default-field title="Due Date"><date-time type="date" format="yyyy-MM-dd"/></default-field>
            </field>
            <field name="estimatedWorkTime"><default-field title="Estimated Hours">
                <display format="#.00"/></default-field></field>
            <field name="actualWorkTime"><default-field title="Actual Hours">
                <display format="#.00"/></default-field></field>
            <field name="description"><default-field title="Description"><text-area rows="12" cols="100"/></default-field></field>
            <field name="submitButton"><default-field title="Update"><submit/></default-field></field>
            
            <field-layout>
                <fields-not-referenced/>
                <field-row><field-ref name="statusId"/><field-ref name="estimatedCompletionDate"/></field-row>
                <field-row><field-ref name="estimatedWorkTime"/><field-ref name="actualWorkTime"/></field-row>
                <field-ref name="description"/>
                <field-ref name="submitButton"/>
            </field-layout>
        </form-single>
    </widgets>
</screen>
