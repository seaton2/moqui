<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-1.3.xsd">

    <entity entity-name="SdProduct" package-name="warehouse">
        <field name="productId" type="id" is-pk="true">
            <description>Primary ID descriptive of item e.g. BA01</description>
        </field>
        <field name="catalogId" type="id" />
        <field name="categoryId" type="id" />
        <field name="gridId" type="id" />
        <field name="statusId" type="id" />
        <field name="defaultVendorId" type="id" />
        <relationship type="one" title="productCatalogId" related-entity-name="SdCatalog">
            <key-map field-name="catalogId"/>
        </relationship>
        <relationship type="one" title="enumId" related-entity-name="moqui.basic.Enumeration">
            <key-map field-name="categoryId"/>
        </relationship>
        <relationship type="one" title="statusId" related-entity-name="moqui.basic.StatusItem">
            <key-map field-name="statusId"/>
        </relationship>
        <relationship type="one" title="partyId" related-entity-name="mantle.party.Party">
            <key-map field-name="defaultVendorId"/>
        </relationship>
        <relationship type="one" title="gridId" related-entity-name="SdGridDefinition">
            <key-map field-name="gridId"/>
        </relationship>
        <seed-data>
            <moqui.basic.EnumerationType description="Category Type" enumTypeId="CategoryType"/>
            <moqui.basic.Enumeration description="Shoes" enumId="SHOES" enumTypeId="CategoryType"/>
            <moqui.basic.Enumeration description="Dancewear" enumId="DANCEWEAR" enumTypeId="CategoryType"/>
            <moqui.basic.Enumeration description="T-shirts" enumId="TSHIRT" enumTypeId="CategoryType"/>
            <moqui.basic.Enumeration description="Tights" enumId="TIGHTS" enumTypeId="CategoryType"/>
            <moqui.basic.Enumeration description="Warm-up Gear" enumId="WARMUP" enumTypeId="CategoryType"/>
            <moqui.basic.Enumeration description="Bags" enumId="BAGS" enumTypeId="CategoryType" />
            <moqui.basic.Enumeration description="Accessories" enumId="ACC" enumTypeId="CategoryType"/>
            <moqui.basic.Enumeration description="Fashion Shoes" enumId="FSHOES" enumTypeId="CategoryType"/>
            <moqui.basic.Enumeration description="Private Label" enumId="PRIV" enumTypeId="CategoryType"/>


        </seed-data>
    </entity>


    <entity entity-name="SdItem" package-name="warehouse">
        <field name="sku" type="id" is-pk="true" />
        <field name="productId" type="id" />
        <field name="colorNameId" type="id" />
        <field name="sizeNameId" type="id" />
        <field name="gridGroup" type="id" />
        <field name="gridPosition" type="number-integer" />
        <field name="columnPosition" type="number-integer" />
        <field name="rowPosition" type="number-integer" />
        <field name="grossWeight" type="number-float" />
        <field name="availability" type="text-short" />
        <relationship type="one" title="productId" related-entity-name="SdProduct">
            <key-map field-name="productId"/>
        </relationship>
        <relationship type="one" title="colorId" related-entity-name="SdColor">
            <key-map field-name="colorId"/>
        </relationship>
        <relationship type="one" title="sizeId" related-entity-name="SdSize">
            <key-map field-name="sizeId"/>
        </relationship>
    </entity>

    <entity entity-name="inventory" package-name="warehouse">
        <field name="sku" type="id" is-pk="true" />

        <field name="location" type="id">
            <description>Location for stock</description>
        </field>
        <field name="qoh" type="number-integer">
            <description>Quantity on hand</description>
        </field>
        <field name="qoo" type="number-integer">
            <description>Quantity on order</description>
        </field>
        <field name="qct" type="number-integer">
            <description>Quantity committed</description>
        </field>
        <field name="qap" type="number-integer">
            <description>Quantity available to promise</description>
        </field>
        <relationship type="one" related-entity-name="sdItem">
            <key-map field-name="sku"/>
        </relationship>
    </entity>

    <entity entity-name="SdColor" package-name="warehouse">
        <field name="colorId" type="id" is-pk="true" />
        <field name="colorCode" type="id" />
        <field name="descriptionEn" type="text-short" />
        <field name="descriptionBr" type="text-short" />
        <field name="colorNameBr" type="text-short" />
    </entity>
    <entity entity-name="SdColorCombination" package-name="warehouse">
        <field name="colorId" type="id" is-pk="true" />
        <field name="color1Id" type="id" />
        <field name="color2Id" type="id" />
        <field name="color3Id" type="id" />
        <field name="color4Id" type="id" />
    </entity>
    <entity entity-name="SdSize" package-name="warehouse">
        <field name="sizeId" type="id" is-pk="true" />
        <field name="sizeCode" type="id" />
        <field name="sizeDescription" type="text-short" />
    </entity>
    <entity entity-name="SdWidth" package-name="warehouse">
        <field name="widthId" type="id" is-pk="true" />
        <field name="widthCode" type="id" />
        <field name="widthDescription" type="text-short" />

    </entity>
    <entity entity-name="SdShankLength" package-name="warehouse">
        <field name="shLengthId" type="id" is-pk="true" />
        <field name="shLengthCode" type="id" />
        <field name="shLenDescription" type="text-short" />
    </entity>
    <entity entity-name="SdShankHardness" package-name="warehouse">
        <field name="shHardnessId" type="id" is-pk="true" />
        <field name="shHardnessCode" type="id" />
        <field name="shHardDescription" type="text-short" />
    </entity>
    <entity entity-name="SdGridDefinition" package-name="warehouse">
        <field name="gridId" type="id" is-pk="true" />
        <field name="noColumns" type="number-integer" />
        <field name="noRows" type="number-integer" />
        <field name="noGroups" type="number-integer" />
    </entity>
    <entity entity-name="SdCatalog" package-name="warehouse">
        <field name="catalogId" type="id" is-pk="true" />
        <field name="catalogName" type="text-short" />
        <field name="catalogYear" type="date" /> <!-- FS Comment: I am not sure if this should be an integer or date,
													  we can either keep a list of years or maybe format the date to show just year
													  or scrap this field altogether and use just the name since the year is always 
													  part of the name or description? -->
        <field name="catalogDescription" type="text-short" />
        <field name="coverImageFile" type="text-long" />
    </entity>
    <entity entity-name="SdProductDescription" package-name="warehouse">
        <field name="productId" type="id" is-pk="true" />
        <field name="descriptionText" type="text-long" />
        <field name="descriptionType" type="id" />
        <field name="seqNumber" type="number-integer" />
        <field name="descriptionLanguage" type="text-short" />
    </entity>
    <entity entity-name="SdProductImage" package-name="warehouse">
        <field name="productId" type="id" is-pk="true" />
        <field name="imageType" type="id" />
        <field name="seqNumber" type="number-integer" />
        <field name="fileLocation" type="text-short" />
        <field name="fileName" type="text-short" />
    </entity>
    <entity entity-name="SdProductPrice" package-name="warehouse">
        <field name="productId" type="id" is-pk="true" />
        <field name="wholesalePrice" type="currency-amount" />
        <field name="retailPrice" type="currency-amount" />
        <field name="msrp" type="currency-amount" />
        <field name="lastCost" type="currency-amount" />
        <field name="averageCost" type="currency-amount" />
        <field name="standardCost" type="currency-amount" />
    </entity>


</entities>