<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.3.xsd"
        default-menu-include="false" standalone="true">

    <parameter name="_index"/>
    <parameter name="_type"/>
    <parameter name="_id"/>
    
    <actions>
        <script>
            import groovy.json.JsonOutput
            import org.elasticsearch.action.get.GetResponse

            org.moqui.context.ExecutionContext ec = context.ec
            GetResponse docGr = ec.elasticSearchClient.prepareGet(_index, _type, _id).execute().actionGet()
            documentString = JsonOutput.prettyPrint(docGr.getSourceAsString())
            flattenedDocumentMap = StupidUtilities.flattenNestedMap(docGr.getSourceAsMap())
        </script>
    </actions>
    <widgets>
        <label text="Flattened Map" type="h2"/>
        <label text="${flattenedDocumentMap}" encode="true"/>
        <label text="Document JSON" type="h2"/>
        <label text="${documentString}" encode="true" type="pre"/>
    </widgets>
</screen>
