<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.3.xsd"
        default-menu-include="false" require-authentication="true" screen-theme-type-enum-id="STT_INTERNAL" >
<transition name="runClock">

    <service-call name="userServices.run#Timeclock"/>
    
    <default-response url="."/>
</transition>
<transition name="main">
    <default-response url="../apps/Main"/>
</transition>
<transition name="logout">
    <actions><script>ec.user.logoutUser()</script></actions>
    <default-response url="../Login"/>
</transition>
<actions>
    <entity-find entity-name="moqui.basic.Timeclock" list="Timeclock_new">
        <econdition field-name="userId" value="${ec.user.getUserId()}"/>
        <econditions combine="or">
            <econdition field-name="status" value="TC_new" />
            <econdition field-name="status" value="TC_in"/>
        </econditions>
        <select-field field-name="status"/>
        <select-field field-name="autoInc"/>
    </entity-find>
</actions>
<widgets>
    <form-single name="timeClock" transition="runClock" >
        <field name="autoInc" >
            <default-field>
                <drop-down allow-empty="false">
                    <list-options list="Timeclock_new" text="${autoInc}"/>
                </drop-down>
            </default-field>
        </field>
        <field name="userId">
            <default-field>
                <display text="${ec.user.getUserId()}"/>
            </default-field>
        </field>
        <field name="Currently">
            <default-field>
                <text-line default-value="${ec.user.userAccount?.userFullName}"/>
            </default-field>
        </field>
        <field name="is">
            <default-field >
                <text-line default-value="${ec.user.userAccount?.status}" />
            </default-field>
        </field>
        <field name="status">
            <default-field>
                <drop-down>
                    <list-options list="Timeclock_new" text="${status}"/>
                </drop-down>
            </default-field>
        </field>
        <field name="timeStamp">
            <default-field >
                <display text="${ec.user.nowTimestamp}"/>
            </default-field>
        </field>
        <field name="Submit">
            <default-field title="Run Clock">
                <submit/>
            </default-field>
        </field>
        <field-layout collapsible="true" >
            <field-group title="Timeclock Application" >
                <field-ref name="Currently"/>
                <field-ref name="is"/>
                <field-ref name="Submit"/>
            </field-group>
            <field-group title="Technical Data">
                <field-ref name="autoInc"/>
                <field-ref name="userId"/>
                <field-ref name="status"/>
                <field-ref name="timeStamp"/>
            </field-group>

        </field-layout>
    </form-single>
    <link url="main" text="Main Application" link-type="anchor-button"/>
    <link url="logout" text="Close"/>







</widgets>
</screen>