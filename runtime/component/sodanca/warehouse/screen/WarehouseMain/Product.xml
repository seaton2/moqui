<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.3.xsd"
	include-child-content="true" require-authentication="false">

	<subscreens default-item="EditProduct">
		<subscreens-item name="ExamplePolicies" menu-index="4" menu-title="Policies"/>
        
        <subscreens-item name="ExampleTerms" menu-index="5" menu-title="Terms"/>
        <subscreens-item name="ExampleWiki" menu-index="6" menu-title="Wiki"/>
	</subscreens>

	<transition name="newProduct">
		<default-response url="../EditProduct" />
	</transition>
	<transition name="findProduct">
		<default-response url="." />
	</transition>
	<transition name="editProduct">
		<default-response url="../EditProduct" />
	</transition>
	<widgets>
		<label type="h2" text="Products" />
		<subscreens-panel id="productPanel" type="popup" />
		<container>
			<container-dialog button-text="Search Products" id="FindProduct">
				<form-single name="FindProducts">
					<field name="productId">
						<default-field>
							<text-find />
						</default-field>
					</field>
					<field name="productDescription">
						<default-field>
							<text-find />
						</default-field>
					</field>
					<field name="productStatus">
						<default-field title="Status">
							<drop-down allow-empty="true">
								<list-options list="productStatusList" text="${description)]" />
							</drop-down>
						</default-field>
					</field>
					<field name="searchButton">
						<default-field title="Find">
							<submit />
						</default-field>
					</field>
				</form-single>

			</container-dialog>
			<link url="newProduct" text="New Product" link-type="hidden-form"
				icon="plusthick" />
		</container>


		<form-list name="ListProducts" list="productList">
			<field name="productId">
				<default-field>
					<link url="editProduct" text="${productId}" />
				</default-field>
			</field>
			<field name="exampleName">
				<header-field title="Name" show-order-by="case-insensitive" />
				<default-field>
					<display also-hidden="false" />
				</default-field>
			</field>
			<field name="exampleTypeEnumId">
				<default-field title="Type">
					<display-entity entity-name="moqui.basic.Enumeration"
						also-hidden="false" />
				</default-field>
			</field>
			<field name="statusId">
				<default-field title="Status">
					<display-entity entity-name="moqui.basic.StatusItem"
						also-hidden="false" />
				</default-field>
			</field>
			<field name="description">
				<header-field show-order-by="case-insensitive" />
				<default-field>
					<display also-hidden="false" />
				</default-field>
			</field>
		</form-list>

	</widgets>

</screen>