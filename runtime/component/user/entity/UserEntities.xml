<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-1.3.xsd">

    <entity entity-name="Timeclock" package-name="moqui.basic">
        <field name="autoInc" type="number-integer" is-pk="true"/>
        <field name="userId" type="id"/>
        <field name="status" type="id"/>

        <field name="timeIn" type="date-time"/>
        <field name="timeOut" type="date-time"/>
        <field name="hoursWorked" type="id"/>
        <relationship type="one" related-entity-name="moqui.security.UserAccount" fk-name="userId">
            <key-map field-name="userId"/>
        </relationship>
        <relationship type="one" related-entity-name="moqui.basic.Enumeration" fk-name="enumId">
            <key-map field-name="status"/>
        </relationship>

        <seed-data>

            <moqui.basic.EnumerationType description="Time Clock Status" enumTypeId="TimeClockStatus"/>
            <moqui.basic.Enumeration description="You are CLOCKED IN" enumId="TC_in" enumTypeId="TimeClockStatus"/>
            <!--<moqui.basic.Enumeration description="Clocked Out" enumId="TC_out" enumTypeId="TimeClockStatus"/> Deprecated not needed-->
            <moqui.basic.Enumeration description="You are CLOCKED OUT" enumId="TC_new" enumTypeId="TimeClockStatus"/>
            <moqui.basic.Enumeration description="You are CLOCKED OUT" enumId="TC_done" enumTypeId="TimeClockStatus"/>
        </seed-data>
    </entity>
    <extend-entity entity-name="UserAccount" package-name="moqui.security">
        <field name="status" type="id"/>
    </extend-entity>

	<view-entity entity-name="UserGroupMemberCheck" package-name="moqui.security">
        <member-entity entity-alias="UGM" entity-name="moqui.security.UserGroupMember" >

        </member-entity>
        <member-entity entity-alias="UA" entity-name="moqui.security.UserAccount" join-from-alias="UGM">
            <key-map field-name="userId"/>

        </member-entity>

        <alias name="userGroupId" entity-alias="UGM"/>
        <alias name="userId" entity-alias="UA"/>
        <alias name="username" entity-alias="UA"/>
        <alias name="userFullName" entity-alias="UA"/>

    </view-entity>

</entities>